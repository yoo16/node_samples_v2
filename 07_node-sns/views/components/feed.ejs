  <div class="flex items-start space-x-4">
    <!-- user_avatar_url -->
    <img class="avatar w-9 h-9 rounded-full" src="/images/no-avatar.png" data-src="<%= feed.user_avatar_url %>">

    <div class="flex-1 min-w-0">
      <div class="flex items-baseline gap-2">
        <!-- userName -->
        <span class="font-bold text-gray-900 dark:text-white truncate">
          <%= feed.user_name %>
        </span>
        <!-- timestamp -->
        <span class="text-sm text-gray-500 dark:text-gray-400 flex-shrink-0">
