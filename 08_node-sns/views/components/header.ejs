<header class="fixed top-0 left-0 right-0 z-10 bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm shadow-sm">
  <div class="container mx-auto max-w-2xl px-4">
    <div class="flex items-center justify-between h-16">
      <!-- 左側ロゴ -->
      <a href="/">
        <div class="flex items-center gap-2">
          <img src="/images/sparkles.svg" alt="Logo" class="w-8 h-8">
          <span class="text-xl font-bold text-slate-800 dark:text-white">Node SNS</span>
        </div>
      </a>

      <!-- 右側プロフィール -->
      <% if (locals.authUser?.id) { %>
      <div class="flex items-center gap-4">
        <a href="/user/<%=  locals.authUser?.id %>">
          <img class="avatar w-9 h-9 rounded-full" src="/images/no-avatar.png" data-src="<%= locals.authUser?.avatar_url %>">
        </a>
        <button id="logoutBtn"
          class="p-2 rounded-full text-slate-500 hover:bg-slate-200 dark:text-slate-400 dark:hover:bg-slate-700 transition-colors"
          aria-label="Sign out">
          <img src="/images/logout.svg" alt="Logout" class="w-5 h-5">
        </button>
      </div>
      <% } else { %>
      <div class="flex items-center gap-4">
        <a href="/login">
          <button class="p-2 rounded-full text-gray-800 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 transition-colors"
            aria-label="Sign in">
            Sign in
          </button>
        </a>
        <a href="/register">
          <button class="p-2 rounded-full text-gray-800 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 transition-colors"
            aria-label="Sign up">
            Sign up
          </button>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</header>

<script>
  // ログアウトボタン処理
  document.getElementById('logoutBtn')?.addEventListener('click', async () => {
    // POST /logout
    const res = await fetch('/logout', {
      method: 'POST'
    })
    if (res.ok) {
      // Redirect /login
      window.location.href = '/login';
    }
  });
</script>