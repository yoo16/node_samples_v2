<header class="fixed top-0 left-0 right-0 z-10 bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm shadow-sm">
  <div class="container mx-auto max-w-2xl px-4">
    <div class="flex items-center justify-between h-16 gap-4"> <a href="/" class="flex-shrink-0">
        <div class="flex items-center gap-2">
          <img src="/images/sparkles.svg" alt="Logo" class="w-8 h-8">
          <span class="hidden sm:inline text-xl font-bold text-slate-800 dark:text-white">Node SNS</span>
        </div>
      </a>

      <form action="/feed/search" method="GET" class="flex-1 max-w-sm">
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-slate-400 group-focus-within:text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <input
            type="text"
            name="keyword"
            placeholder="キーワード検索..."
            class="block w-full pl-10 pr-3 py-1.5 text-sm bg-slate-100 dark:bg-slate-800 border-transparent rounded-full focus:ring-2 focus:ring-sky-500 focus:bg-white dark:focus:bg-slate-700 transition-all text-slate-800 dark:text-slate-200">
        </div>
      </form>

      <div class="flex-shrink-0">
        <% if (locals.authUser?.id) { %>
        <div class="flex items-center gap-2 sm:gap-4">
          <a href="/user/<%= locals.authUser?.id %>">
            <img class="avatar w-9 h-9 rounded-full object-cover" src="<%= locals.authUser?.avatar_url || '/images/no-avatar.png' %>">
          </a>
          <button id="logoutBtn"
            class="p-2 rounded-full text-slate-500 hover:bg-slate-200 dark:text-slate-400 dark:hover:bg-slate-700 transition-colors"
            aria-label="Sign out">
            <img src="/images/logout.svg" alt="Logout" class="w-5 h-5">
          </button>
        </div>
        <% } else { %>
        <div class="flex items-center gap-2">
          <a href="/login" class="px-4 py-1.5 text-sm font-semibold text-white bg-sky-600 rounded-full hover:bg-sky-700">Sign in</a>
          <a href="/register" class="px-4 py-1.5 text-sm font-semibold text-gray-800 bg-gray-200 rounded-full hover:bg-gray-300">Sign up</a>
        </div>
        <% } %>
      </div>

    </div>
  </div>
</header>

<script>
  // ログアウトボタン処理
  document.getElementById('logoutBtn')?.addEventListener('click', async () => {
    if (!confirm('ログアウトしますか？')) return;
    const res = await fetch('/logout', {
      method: 'POST'
    });
    if (res.ok) window.location.href = '/login';
  });
</script>