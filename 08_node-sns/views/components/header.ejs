<header class="fixed top-0 left-0 right-0 z-10 bg-white/80 backdrop-blur-sm shadow-sm">
  <div class="container mx-auto max-w-2xl px-4">
    <div class="flex items-center justify-between h-16 gap-4"> <a href="/" class="flex-shrink-0">
        <div class="flex items-center gap-2">
          <img src="/images/sparkles.svg" alt="Logo" class="w-8 h-8">
          <span class="hidden sm:inline text-xl font-bold text-slate-800">Node SNS</span>
        </div>
      </a>

      <%- include('searchBox') %>

      <div class="flex-shrink-0">
        <% if (locals.authUser?.id) { %>
        <div class="flex items-center gap-2 sm:gap-4">
          <a href="/user/<%= locals.authUser?.id %>">
            <img class="avatar w-9 h-9 rounded-full object-cover" src="<%= locals.authUser?.avatar_url || '/images/no-avatar.png' %>">
          </a>
          <button id="logoutBtn"
            class="p-2 rounded-full text-slate-500 hover:bg-slate-200 transition-colors"
            aria-label="Sign out">
            <img src="/images/logout.svg" alt="Logout" class="w-5 h-5">
          </button>
        </div>
        <% } else { %>
        <div class="flex items-center gap-2">
          <a href="/login" class="px-4 py-1.5 text-sm font-semibold text-white bg-sky-600 rounded-full hover:bg-sky-700">Sign in</a>
          <a href="/register" class="px-4 py-1.5 text-sm font-semibold text-gray-800 bg-gray-200 rounded-full hover:bg-gray-300">Sign up</a>
        </div>
        <% } %>
      </div>

    </div>
  </div>
</header>

<script>
  // ログアウトボタン処理
  document.getElementById('logoutBtn')?.addEventListener('click', async () => {
    if (!confirm('ログアウトしますか？')) return;
    const res = await fetch('/logout', {
      method: 'POST'
    });
    if (res.ok) window.location.href = '/login';
  });
</script>