<% if (locals.authUser?.id) { %>
<form action="/feed/search" method="GET" class="flex-1 max-w-sm">
    <div class="relative group">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-slate-400 group-focus-within:text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </div>
        <input
            type="text"
            name="keyword"
            placeholder="キーワード検索..."
            class="block w-full pl-10 pr-3 py-1.5 text-sm bg-slate-100 border-transparent rounded-full focus:ring-2 focus:ring-sky-500 focus:bg-white transition-all text-slate-800">
    </div>
</form>
<% } %>